# =============================================================================
# RBI COMPLIANCE PLATFORM - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Configuration
NODE_ENV=production
APP_NAME=RBI Compliance Platform
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_APP_NAME=RBI Compliance Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_API_URL=https://api.rbi-compliance.com
NEXT_PUBLIC_WS_URL=wss://api.rbi-compliance.com
NEXT_PUBLIC_CDN_URL=https://cdn.rbi-compliance.com
NEXT_PUBLIC_ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/rbi_compliance_prod
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rbi_compliance_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# MongoDB Configuration
MONGODB_URI=mongodb://root:${MONGODB_PASSWORD}@mongodb:27017/rbi_compliance_docs_prod?authSource=admin
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=rbi_compliance_docs_prod
MONGODB_USER=root
MONGODB_PASSWORD=your_secure_mongodb_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=rbi_compliance_prod

# Message Queue Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=rbi-compliance-platform
KAFKA_GROUP_ID=rbi-compliance-group

RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here

# API Gateway Configuration
KONG_ADMIN_URL=http://kong:8001
KONG_PROXY_URL=http://kong:8000
KONG_ADMIN_TOKEN=your_secure_kong_admin_token_here

# Authentication & Security
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_very_secure_session_secret_here_minimum_32_characters
SESSION_MAX_AGE=86400000

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/rbi-compliance.crt
SSL_KEY_PATH=/etc/ssl/private/rbi-compliance.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# External API Keys
RBI_API_KEY=your_rbi_api_key_here
SEBI_API_KEY=your_sebi_api_key_here
IRDAI_API_KEY=your_irdai_api_key_here

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
TENSORFLOW_SERVING_URL=http://tensorflow-serving:8501

# Cloud Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=rbi-compliance-storage-prod
AWS_CLOUDFRONT_DOMAIN=cdn.rbi-compliance.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@rbi-compliance.com
SMTP_PASSWORD=your_smtp_password_here
EMAIL_FROM=RBI Compliance Platform <noreply@rbi-compliance.com>

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=https://rbi-compliance.com,https://www.rbi-compliance.com
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,txt,jpg,jpeg,png

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rbi-compliance-backups-prod

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ML_PREDICTIONS=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_COMPLIANCE_ALERTS=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Compliance Configuration
COMPLIANCE_REPORT_SCHEDULE=0 0 * * 1
REGULATORY_UPDATE_CHECK_INTERVAL=3600000
AUDIT_LOG_RETENTION_DAYS=2555

# Notification Configuration
NOTIFICATION_CHANNELS=email,sms,webhook
ALERT_ESCALATION_TIMEOUT=1800000

# Development/Debug (should be false in production)
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false

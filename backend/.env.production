# Production Environment Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://username:password@mongodb-cluster:27017/rbi_compliance_prod?authSource=admin&ssl=true
REDIS_URL=redis://username:password@redis-cluster:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_for_production_change_this
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_for_production_change_this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://rbicompliance.com
ALLOWED_ORIGINS=https://rbicompliance.com,https://www.rbicompliance.com,https://app.rbicompliance.com

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@rbicompliance.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# External APIs
RBI_API_BASE_URL=https://api.rbi.org.in
RBI_API_KEY=your_production_rbi_api_key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_super_secure_session_secret_for_production

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# AI/ML Configuration
AI_SERVICE_URL=https://ai.rbicompliance.com
AI_API_KEY=your_production_ai_api_key

# Webhook Configuration
WEBHOOK_SECRET=your_production_webhook_secret

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# SSL Configuration
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Performance Configuration
CLUSTER_MODE=true
WORKER_PROCESSES=auto
COMPRESSION_LEVEL=6

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

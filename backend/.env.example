# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/rbi_compliance
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@rbicompliance.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# External APIs
RBI_API_BASE_URL=https://api.rbi.org.in
RBI_API_KEY=your_rbi_api_key_here

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# AI/ML Configuration
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=your_ai_api_key_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# ENTERPRISE RBI COMPLIANCE PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rbi_compliance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_URL=postgresql://postgres:your_postgres_password@localhost:5432/rbi_compliance

# MongoDB (Document Store)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=rbi_compliance_docs
MONGODB_USER=mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_URL=mongodb://mongodb_user:your_mongodb_password@localhost:27017/rbi_compliance_docs

# Redis (Cache Layer)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379

# Elasticsearch (Search Engine)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password
ELASTICSEARCH_URL=http://elastic:your_elasticsearch_password@localhost:9200

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================

# Apache Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=rbi-compliance-platform
KAFKA_GROUP_ID=rbi-compliance-group

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=rabbitmq_user
RABBITMQ_PASSWORD=your_rabbitmq_password
RABBITMQ_URL=amqp://rabbitmq_user:your_rabbitmq_password@localhost:5672

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================

# Kong API Gateway
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth 2.0
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# AI/ML SERVICES CONFIGURATION
# =============================================================================

# OpenAI API (for advanced NLP)
OPENAI_API_KEY=your_openai_api_key

# Python AI Services
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=8080

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# RBI Website Scraping
RBI_BASE_URL=https://www.rbi.org.in
RBI_CIRCULARS_URL=https://www.rbi.org.in/Scripts/BS_CircularIndexDisplay.aspx

# Banking Core Systems (Examples)
TEMENOS_API_URL=https://your-temenos-instance.com/api
FINACLE_API_URL=https://your-finacle-instance.com/api

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Application Performance Monitoring
APM_SERVICE_NAME=rbi-compliance-platform
APM_SERVER_URL=http://localhost:8200

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# CLOUD CONFIGURATION (for production)
# =============================================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Hot Reload
CHOKIDAR_USEPOLLING=true

# Debug
DEBUG=rbi-compliance:*

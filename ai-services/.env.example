# AI/ML Services Environment Configuration

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_services
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_SSL_MODE=prefer

MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=ai_services
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=false

# ML Model Configuration
MODEL_CACHE_DIR=./models/cache
MODEL_DOWNLOAD_TIMEOUT=300
HUGGINGFACE_CACHE_DIR=./models/huggingface
SPACY_MODEL=en_core_web_sm
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# NLP Configuration
NLP_MAX_TEXT_LENGTH=10000
NLP_BATCH_SIZE=32
NLP_ENABLE_GPU=false
NLP_LANGUAGE=en
NLP_SENTIMENT_THRESHOLD=0.5

# Document Processing Configuration
DOC_PROCESSING_TEMP_DIR=./temp
DOC_PROCESSING_MAX_FILE_SIZE=50MB
DOC_PROCESSING_SUPPORTED_FORMATS=pdf,docx,txt,html
DOC_PROCESSING_OCR_ENABLED=true
DOC_PROCESSING_OCR_LANGUAGE=eng

# Regulatory Intelligence Configuration
REG_INTEL_ENABLE_SCRAPING=true
REG_INTEL_SCRAPING_INTERVAL=3600
REG_INTEL_MAX_CONCURRENT_REQUESTS=5
REG_INTEL_REQUEST_DELAY=1
REG_INTEL_USER_AGENT=ComplianceBot/1.0

# Risk Assessment Configuration
RISK_ASSESSMENT_MODEL_PATH=./models/risk_assessment
RISK_ASSESSMENT_THRESHOLD=0.7
RISK_ASSESSMENT_ENABLE_EXPLANATIONS=true
RISK_ASSESSMENT_BATCH_SIZE=100

# Feature Engineering Configuration
FEATURE_ENGINEERING_CACHE_SIZE=1000
FEATURE_ENGINEERING_ENABLE_SCALING=true
FEATURE_ENGINEERING_SCALING_METHOD=standard
FEATURE_ENGINEERING_ENABLE_ENCODING=true

# Model Training Configuration
TRAINING_ENABLE_MLFLOW=true
TRAINING_EXPERIMENT_NAME=compliance_models
TRAINING_ARTIFACT_LOCATION=./mlruns
TRAINING_MAX_EPOCHS=100
TRAINING_EARLY_STOPPING_PATIENCE=10
TRAINING_VALIDATION_SPLIT=0.2

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=compliance_ai
MLFLOW_ARTIFACT_ROOT=./mlruns
MLFLOW_BACKEND_STORE_URI=postgresql://postgres:password@localhost:5432/mlflow

# External Services Configuration
REGULATORY_INTELLIGENCE_URL=http://localhost:3001
REGULATORY_INTELLIGENCE_API_KEY=
REGULATORY_INTELLIGENCE_TIMEOUT=30

COMPLIANCE_ORCHESTRATION_URL=http://localhost:3002
COMPLIANCE_ORCHESTRATION_API_KEY=
COMPLIANCE_ORCHESTRATION_TIMEOUT=30

DOCUMENT_MANAGEMENT_URL=http://localhost:3004
DOCUMENT_MANAGEMENT_API_KEY=
DOCUMENT_MANAGEMENT_TIMEOUT=30

RISK_ASSESSMENT_URL=http://localhost:3006
RISK_ASSESSMENT_API_KEY=
RISK_ASSESSMENT_TIMEOUT=30

# Caching Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_MODELS=86400
CACHE_TTL_PREDICTIONS=1800
CACHE_TTL_FEATURES=7200
CACHE_KEY_PREFIX=ai_services:

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
WORKER_MEMORY_LIMIT=2GB
ENABLE_ASYNC_PROCESSING=true
ASYNC_QUEUE_SIZE=1000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ENABLE_PERFORMANCE_MONITORING=true

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5
LOG_CONSOLE_ENABLED=true

# Development Configuration
ENABLE_JUPYTER=false
JUPYTER_PORT=8888
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_TESTING_MODE=false

# Data Configuration
DATA_DIR=./data
DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed
DATA_EXTERNAL_DIR=./data/external
DATA_INTERIM_DIR=./data/interim

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_API_KEY_AUTH=false

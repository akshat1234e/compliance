# Document Management Service Environment Configuration

# Application Configuration
NODE_ENV=development
PORT=3004

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=document-management-service

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=document_management
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=password
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_SSL=false

MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=document_management
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=2

ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_REQUEST_TIMEOUT=30000
ELASTICSEARCH_MAX_RETRIES=3

# Storage Configuration
STORAGE_PROVIDER=local
LOCAL_UPLOAD_PATH=./uploads
LOCAL_TEMP_PATH=./temp
MAX_FILE_SIZE=104857600

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=compliance-documents
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Azure Blob Storage Configuration
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=documents

# Google Cloud Storage Configuration
GCP_PROJECT_ID=
GCP_KEY_FILE=
GCP_BUCKET=compliance-documents

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documents

# Document Processing Configuration
ENABLE_OCR=true
ENABLE_CLASSIFICATION=true
ENABLE_THUMBNAILS=true
ENABLE_VERSIONING=true
MAX_PROCESSING_TIME=300000
SUPPORTED_FORMATS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv,jpg,jpeg,png,tiff

# OCR Configuration
OCR_ENGINE=tesseract
OCR_LANGUAGES=eng
OCR_CONFIDENCE=0.7
OCR_ENABLE_PREPROCESSING=true

# AWS Textract Configuration
AWS_TEXTRACT_REGION=us-east-1
AWS_TEXTRACT_ACCESS_KEY_ID=
AWS_TEXTRACT_SECRET_ACCESS_KEY=

# Azure Cognitive Services Configuration
AZURE_COGNITIVE_ENDPOINT=
AZURE_COGNITIVE_API_KEY=

# Classification Configuration
ENABLE_AUTO_CLASSIFICATION=true
CLASSIFICATION_CONFIDENCE=0.8

# Security Configuration
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=your-32-character-secret-key-here
VIRUS_SCANNING_ENABLED=false
VIRUS_SCAN_PROVIDER=clamav
QUARANTINE_PATH=./quarantine
ENABLE_PERMISSIONS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_WINDOW_MS=300000
UPLOAD_RATE_LIMIT_MAX=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_COLORIZE=true

# External Services Configuration
COMPLIANCE_ORCHESTRATION_URL=http://localhost:3002
COMPLIANCE_ORCHESTRATION_API_KEY=
COMPLIANCE_ORCHESTRATION_TIMEOUT=30000

REGULATORY_INTELLIGENCE_URL=http://localhost:3001
REGULATORY_INTELLIGENCE_API_KEY=
REGULATORY_INTELLIGENCE_TIMEOUT=30000

USER_MANAGEMENT_URL=http://localhost:3003
USER_MANAGEMENT_API_KEY=
USER_MANAGEMENT_TIMEOUT=30000

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_DOCUMENTS=7200
CACHE_TTL_THUMBNAILS=86400
CACHE_TTL_SEARCH=1800
CACHE_KEY_PREFIX=document_management:

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=30000
PERF_RESPONSE_TIME_THRESHOLD=2000
PERF_MEMORY_USAGE_THRESHOLD=1024
PERF_CPU_USAGE_THRESHOLD=80

# Feature Flags
FEATURE_ADVANCED_SEARCH=true
FEATURE_BULK_OPERATIONS=true
FEATURE_DOCUMENT_VERSIONING=true
FEATURE_COLLABORATIVE_EDITING=false
FEATURE_DOCUMENT_WORKFLOWS=true
FEATURE_AI_CLASSIFICATION=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# POSTGRES_SSL=true
# RATE_LIMIT_MAX_REQUESTS=1000
# MONITORING_ENABLED=true

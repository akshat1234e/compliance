# =============================================================================
# REGULATORY INTELLIGENCE SERVICE - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=3001
SERVICE_NAME=regulatory-intelligence
LOG_LEVEL=debug

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Database Configuration - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rbi_compliance_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# Database Configuration - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=rbi_compliance_docs_dev
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Database Configuration - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration - Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_REQUEST_TIMEOUT=30000

# Message Queue Configuration - Kafka
KAFKA_CLIENT_ID=regulatory-intelligence-service
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=regulatory-intelligence-group

# Message Queue Configuration - RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# External Services - RBI
RBI_BASE_URL=https://www.rbi.org.in
RBI_CIRCULARS_URL=https://www.rbi.org.in/Scripts/BS_CircularIndexDisplay.aspx
RBI_REQUEST_TIMEOUT=30000
RBI_RETRY_ATTEMPTS=3
RBI_RETRY_DELAY=1000

# External Services - AI Service
AI_SERVICE_URL=http://localhost:8080
AI_SERVICE_API_KEY=your-ai-service-api-key
AI_SERVICE_TIMEOUT=60000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Scraping Configuration
SCRAPING_USER_AGENT=RBI-Compliance-Bot/1.0
SCRAPING_REQUEST_DELAY=1000
SCRAPING_MAX_CONCURRENT=5
SCRAPING_TIMEOUT=30000

# NLP Configuration
NLP_MIN_CONFIDENCE=0.7
NLP_HIGH_CONFIDENCE=0.9
NLP_LANGUAGES=en

# API Keys for Service-to-Service Communication
VALID_API_KEYS=service-key-1,service-key-2,service-key-3

# Logging Configuration
LOG_FORMAT=json

# Development/Testing
DEBUG=regulatory-intelligence:*

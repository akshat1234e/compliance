# Auth Service - Development Environment
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_SECRET=development_jwt_secret_key_not_for_production
JWT_REFRESH_SECRET=development_jwt_refresh_secret_not_for_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rbi_compliance_dev
MONGODB_URI=mongodb://localhost:27017/rbi_compliance_docs_dev
REDIS_URL=redis://localhost:6379

# Email Configuration (disabled for development)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=development_session_secret_not_for_production

# Two-Factor Authentication
TOTP_SERVICE_NAME=RBI Compliance Platform
TOTP_ISSUER=RBI Compliance

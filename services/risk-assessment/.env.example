# Risk Assessment Service Environment Configuration

# Application Configuration
NODE_ENV=development
PORT=3006

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=risk-assessment-service

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=risk_assessment
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=password
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_SSL=false

MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=risk_assessment
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=4

# Risk Assessment Configuration
RISK_ENABLE_REALTIME_SCORING=true
RISK_SCORING_INTERVAL=300000
RISK_THRESHOLD_LOW=0.3
RISK_THRESHOLD_MEDIUM=0.6
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_CRITICAL=0.9
RISK_FACTOR_REGULATORY=0.4
RISK_FACTOR_OPERATIONAL=0.3
RISK_FACTOR_FINANCIAL=0.2
RISK_FACTOR_REPUTATIONAL=0.1
RISK_ENABLE_HISTORICAL_ANALYSIS=true
RISK_HISTORICAL_PERIOD=365

# Machine Learning Configuration
ML_ENABLE_PREDICTIVE_MODELS=false
ML_MODEL_PATH=./models
ML_TRAINING_DATA_PATH=./data/training
ML_ENABLE_AUTO_RETRAINING=false
ML_RETRAINING_INTERVAL=604800000
ML_MODEL_ACCURACY_THRESHOLD=0.85
ML_ENABLE_FEATURE_ENGINEERING=true
ML_MAX_TRAINING_TIME=3600000

# Prediction Configuration
PREDICTION_ENABLE_RISK_PREDICTION=true
PREDICTION_HORIZON=90
PREDICTION_CONFIDENCE_THRESHOLD=0.8
PREDICTION_ENABLE_TREND_ANALYSIS=true
PREDICTION_ENABLE_ANOMALY_DETECTION=true
PREDICTION_ANOMALY_THRESHOLD=2.0
PREDICTION_UPDATE_FREQUENCY=86400000

# Scenario Analysis Configuration
SCENARIO_ENABLE_SCENARIO_ANALYSIS=true
SCENARIO_MAX_SCENARIOS=100
SCENARIO_ENABLE_MONTE_CARLO=false
SCENARIO_SIMULATION_ITERATIONS=10000
SCENARIO_ENABLE_STRESS_TESTING=true
SCENARIO_STRESS_TEST_FACTORS=regulatory,market,operational
SCENARIO_CONFIDENCE_LEVEL=0.95

# Data Processing Configuration
DATA_PROCESSING_BATCH_SIZE=1000
DATA_PROCESSING_MAX_MEMORY_USAGE=1024
DATA_PROCESSING_ENABLE_PARALLEL=true
DATA_PROCESSING_WORKER_THREADS=4
DATA_PROCESSING_ENABLE_VALIDATION=true
DATA_PROCESSING_VALIDATION_RULES=completeness,accuracy,consistency

# Alert Configuration
ALERTS_ENABLE_RISK_ALERTS=true
ALERTS_THRESHOLD_HIGH=0.8
ALERTS_THRESHOLD_CRITICAL=0.9
ALERTS_ENABLE_EMAIL=true
ALERTS_ENABLE_SLACK=false
ALERTS_ENABLE_WEBHOOK=false
ALERTS_COOLDOWN=3600000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ASSESSMENT_RATE_LIMIT_WINDOW_MS=300000
ASSESSMENT_RATE_LIMIT_MAX=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_COLORIZE=true

# External Services Configuration
COMPLIANCE_ORCHESTRATION_URL=http://localhost:3002
COMPLIANCE_ORCHESTRATION_API_KEY=
COMPLIANCE_ORCHESTRATION_TIMEOUT=30000

REGULATORY_INTELLIGENCE_URL=http://localhost:3001
REGULATORY_INTELLIGENCE_API_KEY=
REGULATORY_INTELLIGENCE_TIMEOUT=30000

DOCUMENT_MANAGEMENT_URL=http://localhost:3004
DOCUMENT_MANAGEMENT_API_KEY=
DOCUMENT_MANAGEMENT_TIMEOUT=30000

REPORTING_ANALYTICS_URL=http://localhost:3005
REPORTING_ANALYTICS_API_KEY=
REPORTING_ANALYTICS_TIMEOUT=30000

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_RISK_SCORES=1800
CACHE_TTL_PREDICTIONS=7200
CACHE_TTL_SCENARIOS=3600
CACHE_KEY_PREFIX=risk_assessment:

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9093
HEALTH_CHECK_INTERVAL=30000
PERF_RESPONSE_TIME_THRESHOLD=3000
PERF_MEMORY_USAGE_THRESHOLD=1024
PERF_CPU_USAGE_THRESHOLD=80

# Feature Flags
FEATURE_ADVANCED_RISK_MODELING=true
FEATURE_REALTIME_PREDICTIONS=true
FEATURE_SCENARIO_ANALYSIS=true
FEATURE_MACHINE_LEARNING=false
FEATURE_STRESS_TESTING=true
FEATURE_RISK_VISUALIZATION=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# POSTGRES_SSL=true
# RATE_LIMIT_MAX_REQUESTS=1000
# MONITORING_ENABLED=true
